{
  "name": "episodely",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\" \"npm run dev:open\"",
    "dev:web": "vite",
    "dev:server": "node --watch server/index.js",
    "dev:open": "node -e \"const url='http://localhost:5173';const {exec}=require('child_process');const cmds=[];if(process.platform==='darwin'){cmds.push('open -a \\\\\\\"Google Chrome\\\\\\\" '+url,'open '+url);}else if(process.platform==='win32'){cmds.push('start \\\\\\\"\\\\\\\" '+url);}else{cmds.push('xdg-open '+url);}const cmd=cmds.find(Boolean);setTimeout(()=>{if(cmd){exec(cmd);}},2000);\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server/index.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "vite": "^5.4.0"
  }
}
